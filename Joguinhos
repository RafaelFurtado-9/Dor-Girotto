							if(escolhaCnC!=1 && escolhaCnC!=2){
								printf("Escolha invalida, retornando as perguntas...");
							}	
						}while(escolhaCnC!=1 && escolhaCnC!=2);
					}
					printf("Nada de cobra ou botao. Comecando nova rodada...\n");
