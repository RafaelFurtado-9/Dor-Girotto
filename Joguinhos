														                    if (furia1_1 >= 6) {// Se a fúria da gosma ultrapassar o limite
														                    	morte1_1=true;
														                        furia1_1 = 0; // A gosma é eliminada
														                        gosmas1--; // Diminui a quantidade de gosmas do Player 1
														
