		  scanf(" %c",&resposta);
		  
		 if (resposta == 'c' ) {
			printf("acertou, a resposta era Terabyte, onde 1 Terabyte contem 1,000,000,000,000 Bytes \n ");		 	 
		 } else {
		 	
			 	 printf("errou, a resposta era 'C'  Terabyte, onde 1 Terabyte contem 1,000,000,000,000 Bytes \n");
