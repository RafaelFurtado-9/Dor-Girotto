		  printf("Bem Vindo ao Perguntas e respostas.  \n digite 1) pra voltar \n digite 2) para iniciar \n");
		  scanf("%i", &op);
		   
		 if (op==1){
			 	 printf("Voltando...");
			 	 goto menu;
		 }
		 
