														                    furia2_2=furia2_2/2;
														                    furia2_1=furia2_2+1;
														                }
														            }
														            gosmas2=++gosmas2;
														            morte2_1=false;
																	morte2_2=false;
														            printf("Voce dividiu as gosmas.");
														        }
